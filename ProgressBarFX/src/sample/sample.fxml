<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <children>
      <Label fx:id="myLabel" alignment="CENTER" layoutY="90.0" prefHeight="51.0" prefWidth="600.0" text="Label">
         <font>
            <Font size="40.0" />
         </font>
      </Label>
      <Button fx:id="myButton" layoutX="264.0" layoutY="300.0" mnemonicParsing="false" onAction="#increaseProgress" text="Button">
         <font>
            <Font size="16.0" />
         </font>
      </Button>
      <ProgressBar fx:id="myProgressBar" layoutX="100.0" layoutY="170.0" prefHeight="60.0" prefWidth="400.0" progress="0.0" />
   </children>
</AnchorPane>
