<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.shape.Polygon?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" style="-fx-background-color: #e6e6e6;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <children>
      <ImageView fx:id="myimageView" fitHeight="150.0" fitWidth="180.0" layoutX="420.0" layoutY="450.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@icon.jpg" />
         </image>
      </ImageView>
      <Circle fx:id="myCircle" fill="#ffff99" layoutX="350.0" layoutY="420.0" radius="50.0" stroke="#ffe482" strokeWidth="2.0" />
      <Label fx:id="myLabel" layoutX="50.0" layoutY="50.0" text="Woooooooo" textFill="#5fbfff">
         <font>
            <Font size="40.0" />
         </font>
      </Label>
      <Rectangle fx:id="myRectangle" arcHeight="5.0" arcWidth="5.0" fill="#ffcce6" height="100.0" layoutX="100.0" layoutY="150.0" stroke="WHITE" strokeType="INSIDE" strokeWidth="2.0" width="100.0" />
      <Polygon fx:id="myTriangle" fill="#e6ccff" layoutX="250.0" layoutY="310.0" points="-50.0, 50.0, 50.0, 50.0, -50.0, -60.0" stroke="#af8bff" strokeType="INSIDE" />
      <Line fx:id="myLine" endX="150.0" endY="20.0" layoutX="400.0" layoutY="250.0" opacity="0.6" rotate="60.0" startX="-150.0" startY="20.0" stroke="#ff9966" strokeLineCap="ROUND" strokeWidth="10.0" />
   </children>
</AnchorPane>
